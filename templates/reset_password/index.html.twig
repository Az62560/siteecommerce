{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block content %}
<div class="block-small">
{% for message in app.flashes('notice') %}
    <div class="alert alert-info">{{ message }}</div>
{% endfor %}
<form method="post">
    <h1 class="h3 mb-3 font-weight-normal">Réinitialiser mon mot de passe</h1>
    <label for="inputEmail">Email</label>
    <input placeholder=" Entrez votre email" type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <br>  
    <button class="d-grid gap-2 col-6 mx-auto btn btn-success mt-3" type="submit">
        Valider
    </button>
    <hr>
    <p class="text-center">Ou <a href="{{ path('login') }}">connectez vous</a></p>
</form>
</div>
{% endblock %}
